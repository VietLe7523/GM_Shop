@model GM_Shop.Models.ChangePassword

<!-- Form Start -->
<div class="container-fluid py-5" style="margin-top: 130px">
    <div class="container">
        <div class="row justify-content-md-center">
            <!-- Alert Success Start -->
            @if (!string.IsNullOrWhiteSpace(TempData["Success"]?.ToString()))
            {
                <div class="w-100 d-flex justify-content-end">
                    <div class="alert alert-success alert-dismissible fade show w-50 r-0 mr-5" role="alert" id="alert_error">
                        <strong>Success!</strong> @TempData["Success"]?.ToString()
                    </div>
                </div>
            }
            <!-- Alert Success End -->
            <div class="col-md-12 col-lg-5 col-xl-4">
                <h2 class="mb-4 text-center">Đổi mật khẩu</h2>
                <form method="post" asp-action="ChangePassword">
                    <!-- Validation Summary -->
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- Username Input -->
                    <div class="form-outline mb-3">
                        <label for="username" class="form-label">Tài khoản</label>
                        <input type="text" asp-for="TAIKHOAN" id="username" name="username" class="form-control" />
                        <span asp-validation-for="TAIKHOAN" class="text-danger"></span>
                    </div>

                    <!-- Old Password Input -->
                    <div class="form-outline mb-3">
                        <label for="oldPassword" class="form-label">Mật khẩu cũ</label>
                        <input type="text" asp-for="MATKHAUCU" id="oldPassword" name="oldPassword" class="form-control" />
                        <span asp-validation-for="MATKHAUCU" class="text-danger"></span>
                    </div>

                    <!-- New Password Input -->
                    <div class="form-outline mb-4">
                        <label for="newPassword" class="form-label">Mật khẩu mới</label>
                        <input type="text" asp-for="MATKHAUMOI" id="newPassword" name="newPassword" class="form-control" />
                        <span asp-validation-for="MATKHAUMOI" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary w-100">
                        Đổi mật khẩu
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Form End -->
@section Scripts {
    <script>
        // Tự động đóng thông báo sau 3 giây
        window.addEventListener('DOMContentLoaded', (event) => {
            setTimeout(function () {
                var alert = document.getElementById("alert_error");
                if (alert) {
                    alert.classList.remove('show');  // Loại bỏ lớp 'show' để ẩn thông báo
                    alert.classList.add('fade');     // Thêm lớp 'fade' để chuyển từ từ
                }
            }, 3000); // 3000ms = 3 giây
        });
    </script>
}