@model IEnumerable<GM_Shop.Models.MenuThuongHieu>
<div class="col-lg-12">
    <div class="mb-3">
        <h4>Thương hiệu</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name py-1">
                        <a asp-controller="SanPham" asp-action="Index" asp-route-idBrand="@item.MATH">
                            <i class="fas fa-apple-alt me-2"></i> @item.TENTHUONGHIEU
                        </a>
                        <span>(@item.Count)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div> 