@model GM_Shop.Areas.Admin.Models.ThuongHieuAdmin

@{
    ViewData["Title"] = "Details";
}

<h1>Chi Tiết Thương Hiệu</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mã Thương Hiệu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MATH)
        </dd>
        <dt class = "col-sm-2">
            Tên Thương Hiệu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TENTHUONGHIEU)
