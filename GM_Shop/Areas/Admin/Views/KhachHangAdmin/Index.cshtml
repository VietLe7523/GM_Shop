@model GM_Shop.Areas.Admin.Models.KhachHangAdminModel

@{
    ViewData["Title"] = "Index";
}
<h1>Danh Sách Khách Hàng</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mã khách hàng
            </th>
            <th>
               Họ khách hàng
            </th>
            <th>
                Tên khách hàng
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Email
            </th>
            <th>
                Giới tính
            </th>
            <th>
                Ảnh
            </th>
            <th>
                CCCD
            </th>
            <th>
                Ngày sinh
            </th>
            <th>
                Tài khoản
            </th>
            <th>
                Mật khẩu
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.KhachHangAdmins)
        {
        <tr>
            <td>
                @item.MAKH
            </td>
            <td>
                @item.HOKH
            </td>
            <td>
                @item.TENKH
            </td>
            <td>
                @item.DIACHI
            </td>
            <td>
                @item.SDT
            </td>
            <td>
                @item.EMAIL
            </td>
            <td>
                @item.GIOITINH
            </td>
            <td>
                 <img src="~/Images/KhachHangs/@item.ANH" alt="Ảnh Khách Hàng" style="max-width: 100px; max-height: 100px;" />
            </td>
            <td>
                @item.CCCD
            </td>
            <td>
                @item.NGAYSINH
            </td>
            <td>
                @item.User.TAIKHOAN
            </td>
            <td>
                @item.User.MATKHAU
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.MAKH" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MAKH" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MAKH" class="btn btn-danger btn-sm">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
<br />
<!-- Pagination Start-->
<div class="col-12">
    <div class="pagination d-flex justify-content-center mt-5">
        <!--Button Previous-->
        @if (Model.CurrentPageIndex > 1)
        {
            <a asp-controller="KhachHangAdmin" asp-action="Index"
               asp-route-page="@(Model.CurrentPageIndex -1)"
               class="btn btn-outline-dark mx-2">
                &laquo;
            </a>
        }

        @for (int i = 1; i <= Model.PageCount; i++)
        {
            @if (i != Model.CurrentPageIndex)
            {
                <a asp-controller="KhachHangAdmin" asp-action="Index"
                   asp-route-page="@i"
                   class="btn btn-outline-dark mx-2">
                    @i
                </a>
            }
            else
            {
                //Current Page
                <a class="btn btn btn-outline-dark active mx-2">@i</a>
            }
        }
        <!-- Button Next -->
        @if (Model.PageCount != Model.CurrentPageIndex)
        {
            <a asp-controller="KhachHangAdmin" asp-action="Index"
               asp-route-page="@(Model.CurrentPageIndex + 1)"
               class="btn btn-outline-dark mx-2">
                &raquo;
            </a>
        }
    </div>
</div>
<!-- Pagination End-->
